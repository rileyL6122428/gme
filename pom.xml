  			<plugin>
			     <groupId>org.springframework.boot</groupId>
			     <artifactId>spring-boot-maven-plugin</artifactId>
			     <version>1.5.4.RELEASE</version>
			     <executions>
			        <execution>
			            <goals>
			                <goal>repackage</goal>
			            </goals>
			        </execution>
			    </executions>
			    <configuration>
			        <mainClass>l2kstudios.gme.App</mainClass>
			    </configuration>
			 </plugin>
		</plugins>
	</build>


